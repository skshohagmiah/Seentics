# Copy this file to .env.production and fill in real values before deploying
# NEVER commit .env.production with real secrets

# General
ENVIRONMENT=production
FRONTEND_URL=https://app.your-domain.com
GLOBAL_API_KEY=replace-with-global-api-key
JWT_SECRET=replace-with-strong-random-secret

# Redis
REDIS_PASSWORD=replace-with-redis-strong-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# MongoDB (Users service)
MONGO_INITDB_ROOT_USERNAME=seentics
MONGO_INITDB_ROOT_PASSWORD=replace-with-mongo-strong-password
USERS_MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/seentics?authSource=admin

# MongoDB (Workflows service)
WORKFLOWS_MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/seentics_workflows?authSource=admin

# PostgreSQL (Analytics service)
POSTGRES_USER=seentics
POSTGRES_PASSWORD=replace-with-postgres-strong-password
POSTGRES_DB=seentics_analytics
ANALYTICS_DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?sslmode=disable

# Email provider (Resend)
RESEND_API_KEY=replace-with-resend-api-key
RESEND_FROM=no-reply@your-domain.com

# Optional overrides
# API_GATEWAY_PORT=8080
# CORS_ORIGIN=${FRONTEND_URL}
