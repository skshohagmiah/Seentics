# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Service Configuration
ENVIRONMENT=production
PORT=3002
LOG_LEVEL=info

# Database Configuration (REQUIRED)
DATABASE_URL=postgres://username:password@host:5432/analytics?sslmode=require

# Security (REQUIRED - Generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters

# Performance Tuning
BATCH_SIZE=1000
BATCH_TIMEOUT=5s
WORKER_COUNT=10
MAX_DB_CONNECTIONS=100

# Data Retention
RETENTION_DAYS=90
AGGREGATION_INTERVAL=24h
AGGREGATION_TIME=00:00

# Monitoring
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Geolocation Service (Optional - for production geolocation)
# GEOIP2_DB_PATH=/path/to/GeoLite2-City.mmdb
# GEOIP2_LICENSE_KEY=your-maxmind-license-key

# Logging
LOG_FORMAT=json
LOG_LEVEL=info
LOG_SAMPLING_INITIAL=100
LOG_SAMPLING_THEREAFTER=100
